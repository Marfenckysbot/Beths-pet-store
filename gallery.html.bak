  <link rel="icon" href="assets/icons/favicon.svg" />
  <link rel="stylesheet" href="css/style.css" />
  <link rel="stylesheet" href="css/seasonal.css" />

  <!-- Configs -->
  <script defer src="js/site.config.js"></script>
  <script defer src="js/social.config.js"></script>

  <!-- Core -->
  <script defer src="js/seo.js"></script>
  <script defer src="js/a11y.js"></script>
  <script defer src="js/ui.js"></script>
  <script defer src="js/main.js"></script>

  <!-- Page-specific -->
  <script defer src="js/gallery.js"></script>
</head>
<body>
  <a class="skip-link" href="#main">Skip to content</a>

  <!-- Header -->
  <header class="header">
    <div class="container nav">
      <a href="index.html" class="logo">
        <img id="logo" src="" alt="" width="32" height="32" />
        <span id="brand-name"></span>
      </a>
      <nav class="nav-links" aria-label="Primary">
        <a href="shop.html">Shop</a>
        <a href="services.html">Services</a>
        <a href="adoption.html">Adoption</a>
        <a href="blog.html">Blog</a>
        <a href="faq.html">FAQ</a>
        <a href="contact.html">Contact</a>
      </nav>
      <div class="nav-cta">
        <button id="dark-mode-toggle" class="theme-toggle" aria-pressed="false">ðŸŒ“</button>
      </div>
    </div>
  </header>

  <!-- Main content -->
  <main id="main">
    <!-- Carousel/gallery section -->
    <section class="gallery-section section container">
      <div class="gallery-wrapper">
        <!-- Left Arrow -->
        <button class="nav-left">
          <img src="images/ui/gallery_arrow.svg" alt="Previous" class="ui-arrow" />
        </button>

        <!-- Images -->
        <div class="gallery-images">
          <img src="images/animals/dog1.jpg" alt="Dog" />
          <img src="images/animals/cat1.jpg" alt="Cat" />
        </div>

        <!-- Right Arrow -->
        <button class="nav-right">
          <img src="images/ui/gallery_arrow.svg" alt="Next" class="ui-arrow flip" />
        </button>
      </div>
    </section>

    <!-- Community Wall masonry section -->
    <section class="section container">
      <h1>Community Wall</h1>
      <div class="filters">
        <button class="btn btn-ghost filter-btn is-active" data-filter="all">All</button>
        <button class="btn btn-ghost filter-btn" data-filter="dogs">Dogs</button>
        <button class="btn btn-ghost filter-btn" data-filter="cats">Cats</button>
        <button class="btn btn-ghost filter-btn" data-filter="farm">Farm</button>
      </div>
      <div class="masonry" id="galleryGrid">
        <img src="images/animals/dog-run.jpg" data-type="dogs" alt="Dog running" width="400" height="300" loading="lazy" decoding="async" />
        <img src="images/animals/cat-nap.jpg" data-type="cats" alt="Cat napping" width="400" height="500" loading="lazy" decoding="async" />
        <img src="images/animals/goat-field.jpg" data-type="farm" alt="Goat in field" width="400" height="300" loading="lazy" decoding="async" />
        <img src="images/animals/sheep.jpg" data-type="farm" alt="Sheep grazing" width="400" height="300" loading="lazy" decoding="async" />
      </div>
      <div id="lightbox" class="lightbox" hidden>
        <button class="lightbox-close" aria-label="Close">Ã—</button>
        <img alt="" />
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container section">
      <strong id="footer-store-name"></strong>
      <p id="footer-address" class="muted"></p>
      <p>
        <a id="social-whatsapp" href="#" rel="noopener">WhatsApp</a> Â·
        <a id="social-facebook" href="#" rel="noopener">Facebook</a>
      </p>
    </div>
  </footer>

  <!-- Contact Hub -->
  <div id="contact-hub" class="contact-hub"></div>
</body>
</html>