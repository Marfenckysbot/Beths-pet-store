<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Contact â€” Beth Store</title>
  <link rel="icon" href="assets/icons/favicon.svg" />
  <link rel="stylesheet" href="css/style.css" />

  <!-- Configs -->
  <script defer src="js/site.config.js"></script>
  <script defer src="js/social.config.js"></script>

  <!-- Core -->
  <script defer src="js/seo.js"></script>
  <script defer src="js/a11y.js"></script>
  <script defer src="js/ui.js"></script>
  <script defer src="js/main.js"></script>
</head>
<body>
  <a class="skip-link" href="#main">Skip to content</a>

  <!-- Header -->
  <header class="header">
    <div class="container nav">
      <a href="index.html" class="logo">
        <img id="logo" src="" alt="" width="32" height="32" />
        <span id="brand-name"></span>
      </a>
      <nav class="nav-links" aria-label="Primary">
        <a href="shop.html">Shop</a>
        <a href="services.html">Services</a>
        <a href="adoption.html">Adoption</a>
        <a href="blog.html">Blog</a>
        <a href="faq.html">FAQ</a>
        <a href="contact.html" aria-current="page">Contact</a>
      </nav>
      <div class="nav-cta">
        <button id="dark-mode-toggle" class="theme-toggle" aria-pressed="false">ðŸŒ“</button>
      </div>
    </div>
  </header>

  <!-- Main content -->
  <main id="main">
    <section class="section container">
      <h1>Get in touch</h1>
      <p id="contact-address"></p>
      <p>
        <a id="social-whatsapp" href="#" rel="noopener">WhatsApp</a> Â·
        <a id="social-facebook" href="#" rel="noopener">Facebook</a>
      </p>

      <!-- Map placeholder; embed URL set via config -->
      <div class="map" id="map" aria-label="Store location map">
        <p>Map placeholder â€” coordinates from config</p>
      </div>

      <form id="contact-form" class="contact-form stack">
        <label>Name
          <input name="name" required class="input" />
        </label>
        <label>Email
          <input type="email" name="email" required class="input" />
        </label>
        <label>Message
          <textarea name="message" rows="4" required class="textarea"></textarea>
        </label>
        <button class="btn btn-primary" type="submit">Send</button>
        <output id="contact-status" aria-live="polite"></output>
      </form>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container section">
      <strong id="footer-store-name"></strong>
      <p id="footer-address" class="muted"></p>
      <p>
        <a id="social-whatsapp-footer" href="#" rel="noopener">WhatsApp</a> Â·
        <a id="social-facebook-footer" href="#" rel="noopener">Facebook</a>
      </p>
    </div>
  </footer>

  <!-- Contact hub (optional) -->
  <div id="contact-hub" class="contact-hub"></div>
</body>
</html>