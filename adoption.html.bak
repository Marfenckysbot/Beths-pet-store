  <!-- Main content -->
  <main id="main">
    <section class="section container">
      <h1>Adoption Application</h1>
      <p>We simplify the process while keeping pets safe and healthy.</p>

      <form id="adoption-form" class="stack">
        <label>Full name
          <input name="name" required class="input" />
        </label>

        <label>Email
          <input type="email" name="email" required class="input" />
        </label>

        <label>Preferred breed
          <input name="breed" class="input" />
        </label>

        <!-- EDIT: adoption.minimalProof toggles this field visibility -->
        <label id="proof-field">Proof of residence
          <input type="file" name="proof" accept="image/*,.pdf" class="input" />
        </label>

        <button class="btn btn-primary" type="submit">Submit</button>
        <output id="adoption-status" aria-live="polite"></output>
      </form>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container section">
